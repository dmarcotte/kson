<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>org.kson.jetbrains</id>
    <name>Kson</name>
    <vendor>Kson.org</vendor>

    <depends>com.intellij.modules.platform</depends>

    <description><![CDATA[
        <p>
            <a href="https://kson.org">Kson</a> language support
        </p>
        <p>
            For issues, feature requests, and source code, please visit the <a href="https://github.com/kson-org/kson/tree/main/jetbrains">plugin project home</a>
        </p>
    ]]></description>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="Kson"
                  implementationClass="org.kson.jetbrains.file.KsonFileType"
                  fieldName="INSTANCE"
                  language="org.kson.jetbrains"
                  extensions="kson"/>

        <lang.parserDefinition language="org.kson.jetbrains"
                               implementationClass="org.kson.jetbrains.parser.KsonParserDefinition"/>
        <lang.syntaxHighlighterFactory language="org.kson.jetbrains"
                                       implementationClass="org.kson.jetbrains.highlighter.KsonSyntaxHighlighterFactory"/>
        <typedHandler implementation="org.kson.jetbrains.editor.KsonTypedHandlerDelegate"/>
        <backspaceHandlerDelegate implementation="org.kson.jetbrains.editor.KsonBackspaceHandlerDelegate"/>
        <lang.commenter language="org.kson.jetbrains" implementationClass="org.kson.jetbrains.editor.KsonCommenter"/>
        <lang.braceMatcher language="org.kson.jetbrains" implementationClass="org.kson.jetbrains.editor.KsonPairedBraceMatcher"/>
        <lang.quoteHandler language="org.kson.jetbrains" implementationClass="org.kson.jetbrains.editor.KsonQuoteHandler"/>
        <colorSettingsPage implementation="org.kson.jetbrains.pages.KsonColorSettingsPage"/>
    </extensions>
</idea-plugin>
