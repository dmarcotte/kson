{
  "comments": {
    "lineComment": "#"
  },
  "onEnterRules": [
    {
      "beforeText": "^\\s*[^:]+:\\s*$",
      "action": {
        "indent": "indent"
      }
    },
    {
      "beforeText": "^\\s*[^:]+:\\s*%%$",
      "afterText": "^%%$",
      "action": {
        "indent": "indent"
      }
    },
    {
      "beforeText": "^\\s*[^:]+:\\s*\\$\\$$",
      "afterText": "^\\$\\$$",
      "action": {
        "indent": "indent"
      }
    }
  ],
  "brackets": [
    [
      "{",
      "}"
    ],
    [
      "[",
      "]"
    ],
    [
      "(",
      ")"
    ],
    [
      "<",
      ">"
    ]
  ],
  "autoClosingPairs": [
    [
      "{",
      "}"
    ],
    [
      "[",
      "]"
    ],
    [
      "<",
      ">"
    ],
    [
      "(",
      ")"
    ],
    [
      "\"",
      "\""
    ],
    [
      "'",
      "'"
    ],
    [
      "$$",
      "$$"
    ],
    [
      "%%",
      "%%"
    ]
  ],
  "surroundingPairs": [
    [
      "{",
      "}"
    ],
    [
      "[",
      "]"
    ],
    [
      "<",
      ">"
    ],
    [
      "(",
      ")"
    ],
    [
      "\"",
      "\""
    ],
    [
      "'",
      "'"
    ],
    [
      "$$",
      "$$"
    ],
    [
      "%%",
      "%%"
    ]
  ]
}