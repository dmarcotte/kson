{
  "name": "kson-vscode-plugin",
  "displayName": "Kson Language Support",
  "description": "Provides language support for the Kson data format.",
  "authors": [
    {
      "name": "Bart Dubbeldam",
      "email": "bart.dubbeldam@dc-analytic.com"
    },
    {
      "name": "Daniel Marcotte",
      "email": "dmarcotte@gmail.com"
    }
  ],
  "version": "0.0.1",
  "main": "./out/src/client/node/ksonClientMain.js",
  "contributes": {
    "languages": [
      {
        "id": "kson",
        "aliases": [
          "Kson",
          "kson"
        ],
        "extensions": [
          ".kson"
        ],
        "icon": {
          "light": "./assets/kson-icon.png",
          "dark": "./assets/kson-icon.png"
        },
        "configuration": "./src/config/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "kson",
        "scopeName": "source.kson",
        "path": "./src/config/syntaxes/kson.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "Kson"
    }
  },
  "engines": {
    "vscode": "^1.101.0",
    "node": "^20.18.1"
  },
  "scripts": {
    "compile": "tsc -b",
    "test": "npm run compile && vscode-test"
  },
  "dependencies": {
    "kson-language-server": "file:../language-server-protocol",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.0.0",
    "@types/uuid": "^9.0.8",
    "@types/vscode": "1.101.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "mocha": "^11.7.1",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "uuid": "^9.0.1"
  }
}
